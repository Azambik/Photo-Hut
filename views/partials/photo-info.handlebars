<article class="photo">
  <div class="title">
    <img src="{{photo_url}}" alt={{title}}>
    <span>({{format_url photo_url}})</span>
  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/photo/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>